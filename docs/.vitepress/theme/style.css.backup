/* ================
   NUCLEAR BORDER COLOR FIX - MAXIMUM SPECIFICITY
   ================ */

/* Override all possible VitePress border color variables */
:root.dark {
  --vp-c-divider: #424245 !important;
  --vp-c-border: #424245 !important;
  --vp-c-gutter: #424245 !important;
  --vp-sidebar-border-color: #424245 !important;
  --vp-nav-border-color: #424245 !important;
}

/* Nuclear approach - force exact same border on both elements */
html.dark body .VPApp .Layout .VPNav[class*="VPNav"],
html.dark body .VPApp .Layout.has-sidebar .VPNav[class*="VPNav"],
html.dark body .VPApp .VPNav[class*="VPNav"],
.dark[class] .VPNav[class*="VPNav"],
.dark[class] .Layout[class] .VPNav[class*="VPNav"] {
  border-bottom: 1px solid #424245 !important;
  border-bottom-color: #424245 !important;
  box-shadow: 0 1px 0 0 #424245 !important;
}

html.dark body .VPApp .Layout .VPSidebar[class*="VPSidebar"],
html.dark body .VPApp .Layout.has-sidebar .VPSidebar[class*="VPSidebar"],
.dark[class] .VPSidebar[class*="VPSidebar"],
.dark[class] .Layout[class] .VPSidebar[class*="VPSidebar"] {
  border-right: 1px solid #424245 !important;
  border-right-color: #424245 !important;
  box-shadow: 1px 0 0 0 #424245 !important;
}

/* Force border color on all possible border-related pseudo-elements */
.dark .VPNav::before,
.dark .VPNav::after,
.dark .VPSidebar::before,
.dark .VPSidebar::after {
  border-color: #424245 !important;
  background-color: #424245 !important;
}

/* Ensure clean PNG transparency for hero images */
.VPHero .image,
.VPHero .image *,
.VPHero .VPImage,
.VPHero .VPImage *,
.VPHero img,
.Layout .VPHero .image,
.Layout .VPHero .image * {
  background: transparent !important;
  background-color: transparent !important;
  backdrop-filter: none !important;
  -webkit-backdrop-filter: none !important;
}

/* Remove any potential background inheritance */
.VPHero .image::before,
.VPHero .image::after {
  display: none !important;
}

