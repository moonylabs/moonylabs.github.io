/* ================
   MOBILE OPTIMIZATION - 1:1 DESKTOP EXPERIENCE
   ================ */
/* Ensure mobile devices show the exact same layout as desktop */
@media (max-width: 768px) {
  /* Force consistent scaling */
  html {
    font-size: 16px !important;
    -webkit-text-size-adjust: 100% !important;
    -ms-text-size-adjust: 100% !important;
  }
  
  /* Maintain exact desktop proportions */
  body {
    min-width: 320px !important;
    overflow-x: auto !important;
  }
  
  /* Ensure navigation maintains desktop layout */
  .VPNav {
    min-width: 320px !important;
  }
  
  .VPNavBar {
    min-width: 320px !important;
    padding: 0 16px !important;
  }
  
  /* Keep sidebar functionality */
  .VPSidebar {
    min-width: 280px !important;
    max-width: 280px !important;
  }
  
  /* Maintain content width consistency */
  .vp-doc {
    min-width: 320px !important;
    max-width: 100% !important;
  }
  
  /* Ensure tip boxes maintain desktop appearance */
  .vp-doc .custom-block.tip,
  .vp-doc .custom-block.warning,
  .vp-doc .custom-block.danger,
  .vp-doc .custom-block.info {
    margin: 24px 0 !important;
    padding: 16px 20px !important;
    border-radius: 8px !important;
    font-size: 14px !important;
    line-height: 1.6 !important;
  }
  
  /* Maintain image sizing consistency */
  .vp-doc img {
    max-width: 100% !important;
    height: auto !important;
    border-radius: 8px !important;
  }
  
  /* Keep table layouts intact */
  .vp-doc table {
    font-size: 14px !important;
    min-width: 100% !important;
    overflow-x: auto !important;
  }
  
  /* Maintain code block readability */
  .vp-doc div[class*='language-'] {
    font-size: 13px !important;
    line-height: 1.5 !important;
  }
  
  /* Ensure proper spacing on mobile */
  .vp-doc h1 { margin: 32px 0 24px 0 !important; font-size: 28px !important; }
  .vp-doc h2 { margin: 28px 0 20px 0 !important; font-size: 24px !important; }
  .vp-doc h3 { margin: 24px 0 16px 0 !important; font-size: 20px !important; }
  .vp-doc h4 { margin: 20px 0 14px 0 !important; font-size: 18px !important; }
  .vp-doc p { margin: 16px 0 !important; line-height: 1.6 !important; }
  
  /* Maintain button and link consistency */
  .vp-doc a {
    font-size: inherit !important;
    text-decoration: none !important;
  }
  
  /* Keep navigation menu accessible */
  .VPNavBarMenu {
    min-width: 200px !important;
  }
  
  .VPNavBarMenuLink {
    padding: 8px 16px !important;
    font-size: 14px !important;
  }
}

