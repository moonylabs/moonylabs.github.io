  .VPContent .container,
  .VPContent .content,
  .VPContent .main,
  .VPContent .page,
  .VPContent .doc,
  .VPContent .content-container {
    margin-top: 0 !important;
    padding-top: 0 !important;
  }
  
  /* Override any VitePress default page spacing */
  .VPContent .page-content,
  .VPContent .doc-content,
  .VPContent .main-content {
    margin-top: 0 !important;
    padding-top: 0 !important;
  }
  
  /* Target the main page wrapper */
  .VPContent .page,
  .VPContent .doc,
  .VPContent .main {
    margin-top: 0 !important;
    padding-top: 0 !important;
  }
  
  /* But preserve spacing between content elements */
  .vp-doc h1 + *,
  .vp-doc h2 + *,
  .vp-doc h3 + *,
  .vp-doc h4 + *,
  .vp-doc p + *,
  .vp-doc div + * {
    margin-top: 16px !important;
  }
  
  /* Ensure first element has no top spacing */
  .vp-doc > :first-child {
    margin-top: 0 !important;
    padding-top: 0 !important;
  }
  
  /* Nuclear option - remove ALL top spacing from everything */
  .VPContent,
  .VPContent *,
  .vp-doc,
  .vp-doc *,
  .container,
  .container *,
  .content,
  .content *,
  .main,
